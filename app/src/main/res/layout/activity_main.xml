<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView

    android:layout_width="match_parent"
    android:layout_height="match_parent"


    android:fillViewport="true">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/appbar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_orange_light">


        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"

            app:popupTheme="@style/AppTheme.PopupOverlay" />
        </LinearLayout>


    </android.support.design.widget.AppBarLayout>
    <SearchView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/search"/>

    <android.support.v4.view.ViewPager

    android:id="@+id/pager"
    android:layout_width="match_parent"
        android:visibility="visible"
        android:layout_below="@id/appbar"
        android:layout_height="250dp"
        android:layout_alignParentTop="false"
        android:layout_centerInParent="true"
        />


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:fillViewport="true"
        android:id="@+id/hscv"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:id="@+id/childhscv">
            <Button
                android:layout_width="wrap_content"
                android:text="Monday"

                android:id="@+id/img1"
                android:layout_height="match_parent"

                android:scaleType="fitCenter"
                />
            <Button
                android:layout_width="0dp"
                android:layout_weight="50"
                android:text="Tuesday"

                android:id="@+id/img2"
                android:layout_height="match_parent"

                />
            <Button
                android:layout_width="0dp"
                android:layout_weight="50"
                android:text="Wednesday"

                android:id="@+id/img3"
                android:layout_height="match_parent"

                />
            <Button
                android:layout_width="0dp"
                android:layout_weight="50"
                android:text="Thursday"

                android:id="@+id/img4"
                android:layout_height="match_parent"

                />
            <Button
                android:layout_width="0dp"
                android:layout_weight="50"
                android:text="Friday"

                android:id="@+id/img5"
                android:layout_height="match_parent"

                />
            <Button
                android:layout_width="0dp"
                android:layout_weight="50"
                android:text="Saturday"

                android:id="@+id/img6"
                android:layout_height="match_parent"

                />
        </LinearLayout>



    </HorizontalScrollView>

    <ScrollView
        android:id="@+id/tct"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="35"
        android:layout_alignParentTop="false"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="75"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/food7"
                    android:alpha="0.4"
                    android:scaleType="fitXY"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
<RelativeLayout
    android:layout_width="0dp"
    android:layout_weight="50"
    android:layout_height="match_parent"
    android:id="@+id/knowus"
    >
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Know Us Better"
        android:layout_centerInParent="false"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/btn1"/>


</RelativeLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="50"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textColor="@android:color/black"
                    android:background="@android:color/white"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="E-mail"
                    android:textColor="@android:color/black"
                    android:background="@android:color/white"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phone no"
                    android:textColor="@android:color/black"
                    android:background="@android:color/white"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Feedback"
                    android:textColor="@android:color/black"
                    android:background="@android:color/white"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Submit"
                    android:textColor="@android:color/black"
                    android:background="@android:color/white"/>
            </LinearLayout>
            </LinearLayout>
            </FrameLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="25"
    android:orientation="vertical"
    android:background="@android:color/holo_orange_light">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:text="Address"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:id="@+id/txt_foot1"
        />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AIKA Scientific Meals"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:id="@+id/txt_foot2"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3rd floor,128,Pocket 1,"

            android:textColor="@android:color/black"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sector 20,Rohini,Delhi-110086"

            android:textColor="@android:color/black"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:text="Follow Us"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/twittericon"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/facebook"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
        </LinearLayout>

    </ScrollView>
        </LinearLayout>
    </ScrollView>
    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/navlst"
        app:menu="@menu/navigation_menu" />
    </android.support.v4.widget.DrawerLayout>



